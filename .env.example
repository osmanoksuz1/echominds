# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your-key-here

# Application Settings
APP_NAME=EchoMinds
DEBUG_MODE=False
LOG_LEVEL=INFO

# Audio Settings
SAMPLE_RATE=44100
CHANNELS=1
AUDIO_FORMAT=wav

# File Paths
TEMP_DIR=assets/temp
CLONED_VOICES_DIR=assets/cloned_voices
OUTPUT_DIR=assets/outputs

# Recording Limits
MIN_RECORDING_DURATION=3
MAX_RECORDING_DURATION=600
DEFAULT_RECORDING_DURATION=30

# API Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Voice Cloning Settings
VOICE_CLONE_TYPE=instant
# Options: instant, professional

# TTS Settings
DEFAULT_VOICE_STABILITY=0.5
DEFAULT_VOICE_SIMILARITY=0.75
DEFAULT_SPEECH_RATE=1.0

# Translation Settings
DEFAULT_SOURCE_LANG=auto
DEFAULT_TARGET_LANG=en

# UI Settings
THEME=light
# Options: light, dark

# Cache Settings
ENABLE_CACHE=True
CACHE_TTL=3600
